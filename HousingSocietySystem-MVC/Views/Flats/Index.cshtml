@model IEnumerable<HousingSocietySystem_MVC.Models.Flat>

    <p class="alert alert-primary">Flat Details</p>
        <a asp-action="Create" class="btn-info btn" >Add New</a>

    <table  class="table table-bordered w-50 bg-primary">
        @if(Model.Count()==0)
    {
        <tr>
            <td>No Flats Available in Database</td>
            <td>
            
            </td>
        </tr>
    }
    else
    {
        <tr>
            <th>
Flat No
</th>
<th>
    Flat Name
</th>
<th>
    Flat Owner
</th>
<th>Wing</th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.FlatNo
                </td>
                <td>
                    @item.FlatName
                </td>
                <td>
                    @item.FlatOwner
                </td>
                <td>
                    @item.Wing
                </td>
            </tr>
        }
    }


    </table>